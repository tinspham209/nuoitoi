{
	"$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
	"files": {
		"ignoreUnknown": true,
		"includes": ["src", "tests", "playwright.config.ts"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 88,
		"lineEnding": "lf"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useValidAnchor": "off",
				"useButtonType": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"quoteProperties": "asNeeded",
			"semicolons": "always"
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"json": {
		"formatter": {
			"lineWidth": 120
		}
	}
}
